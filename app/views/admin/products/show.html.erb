<ol class="breadcrumb">
  <li><%= link_to 'Products', admin_products_path%></li>
  <li><%= link_to @product.name, admin_products_path(@product)%></li>
  <li class="active">Edit Product</li>
</ol>

<p>
  <%= image_tag @product.image_url, alt: @product.name, style: "max-width: 600px"%> 
</p>

<p>
  Price: <%= @product.price %>
</p>

<p>
  <%= link_to 'Edit Products', edit_admin_product_path(@product), class: 'btn btn-primary' %>
  <%= link_to "Delete Product", admin_product_path(@product), method: 'delete', data: {confirm: 'Are you sure you want to delete this product?'}, class: 'btn btn-primary' %> 
</p>